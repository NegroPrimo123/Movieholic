{
  "name": "movie-recommendation-service",
  "version": "2.0.0",
  "description": "Сервис рекомендаций фильмов по сценариям с реальной базой данных и API Кинопоиска",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "dev:win": "set NODE_ENV=development&& nodemon src/app.js",
    "start:prod": "set NODE_ENV=production&& node src/app.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:test": "node -e \"require('./src/database').testConnection()\"",
    "test": "echo \"Запустите: npm run db:test для проверки подключения\"",
    "test:api": "node test/api-test.js"
  },
  "keywords": [
    "movies",
    "recommendations",
    "kinopoisk",
    "nodejs",
    "express",
    "postgres",
    "real-data",
    "no-mocks"
  ],
  "author": "Movie Recommendation Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.0.0",
    "pg": "^8.11.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}