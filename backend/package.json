{
  "name": "movie-recommendation-service",
  "version": "3.0.0",
  "description": "Сервис рекомендаций фильмов по сценариям с реальной базой данных, API Кинопоиска и аутентификацией",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "dev:win": "set NODE_ENV=development&& nodemon src/app.js",
    "start:prod": "set NODE_ENV=production&& node src/app.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:test": "node -e \"require('./src/database').testConnection()\"",
    "db:migrate": "node src/migrations/runMigrations.js",
    "test": "jest --coverage",
    "test:api": "node test/api-test.js",
    "generate:secret": "node -e \"console.log(require('crypto').randomBytes(64).toString('hex'))\""
  },
  "keywords": [
    "movies",
    "recommendations",
    "kinopoisk",
    "nodejs",
    "express",
    "postgres",
    "authentication",
    "jwt",
    "real-data"
  ],
  "author": "Movie Recommendation Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}